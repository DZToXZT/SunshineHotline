<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">
        <ImageButton android:id="@+id/media_btn_back" android:layout_width="0dp" android:layout_weight="1"
                     android:layout_height="fill_parent" android:src="@drawable/audio_player_back"/>
        <TextView android:id="@+id/media_tv_head"
                  android:layout_height="fill_parent" android:layout_width="0dp" android:layout_weight="4"
                  android:text="@string/media_player_head" android:textSize="20dp" android:gravity="center"/>
        <ImageButton android:id="@+id/media_btn_video" android:layout_width="0dp" android:layout_weight="1"
                     android:layout_height="wrap_content" android:src="@drawable/video_player"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="vertical">
        <TextView android:id="@+id/media_tv_title" android:layout_width="fill_parent" android:layout_height="wrap_content"/>
        <TextView android:id="@+id/media_tv_content" android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:gravity="center_horizontal" android:layout_marginBottom="30dp">
        <Button android:id="@+id/media_btn_dial_1" android:layout_width="120dp" android:layout_height="50dp"
                android:text="@string/media_player_hotline_1"/>
        <Button android:id="@+id/media_btn_dial_2" android:layout_width="120dp" android:layout_height="50dp"
                android:text="@string/media_player_hotline_2"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/media_player_time_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"/>
        <TextView
                android:id="@+id/media_player_time_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"/>
        <SeekBar
                android:id="@+id/media_player_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="4dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/media_player_time_total"
                android:layout_toRightOf="@id/media_player_time_current"
                android:focusable="true"
                android:progressDrawable="@drawable/seekbar_style"
                android:thumb="@drawable/seek_up"
                android:max="1000"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_horizontal">
        <ImageButton android:id="@+id/media_btn_ask" android:layout_width="wrap_content"
                     android:layout_height="wrap_content" android:layout_gravity="center_vertical"
                     android:src="@drawable/audio_player_ask"/>
        <ImageButton android:id="@+id/media_btn_play" android:layout_width="wrap_content"
                     android:layout_height="wrap_content" android:src="@drawable/audio_player_play"/>
        <ProgressBar
                android:id="@+id/probar"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="gone"/>
        <ImageButton android:id="@+id/media_btn_share" android:layout_width="wrap_content"
                     android:layout_height="wrap_content" android:layout_gravity="center_vertical"
                     android:src="@drawable/audio_player_share"/>
    </LinearLayout>
</LinearLayout>